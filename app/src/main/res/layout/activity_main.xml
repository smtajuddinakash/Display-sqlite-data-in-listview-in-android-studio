<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#03A9F4"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/idEditTextId"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Enter Id"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/edit_text_bg"/>

    <EditText
        android:id="@+id/nameEditTextId"
        android:layout_width="270dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:hint="Enter Name"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textColor="#000"
        android:textColorHint="#000"
        android:background="@drawable/edit_text_bg" />

    <Button
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="SAVE"
        android:textColor="#0376AA"
        android:background="@drawable/bgbtn"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:id="@+id/saveBtnId"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Show"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:background="@drawable/btnblue"
        android:layout_marginTop="5dp"
        android:id="@+id/showBtnId"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Update"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_gravity="center"
        android:background="@drawable/btngreen"
        android:layout_marginTop="5dp"
        android:id="@+id/updateBtnId"/>

    <Button
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textColor="#FFFFFF"
        android:layout_gravity="center"
        android:background="@drawable/btnred"
        android:textSize="15sp"
        android:layout_marginTop="5dp"
        android:id="@+id/deleteBtnId"/>

</LinearLayout>